
<h2>Posts List</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="fs-5">ID</th>
      <th class="fs-5">Title</th>
      <th class="fs-5">Description</th>
      <th class="fs-5">Status</th>
      <th class="fs-5">User ID</th>
      <th class="fs-5">Created At</th>
      <th class="fs-5">Updated At</th>
    </tr>
  </thead>

  <tbody id="postsTable">
    <% @posts.each do |post| %>
  <tr id="postRow_<%= post.id%>">
  <td class="fs-6"><%= post.id %></td>
  <td class="fs-6"><%= post.title %></td>
  <td class="fs-6"><%= post.description %></td>
  <td class="fs-6"><%= post.status %></td>
  <td class="fs-6"><%= post.user_id %></td>
  <td class="fs-6"><%= post.created_at %></td>
  <td class="fs-6"><%= post.updated_at %></td>
  
</tr>
    <% end %>
  </tbody>
</table>
