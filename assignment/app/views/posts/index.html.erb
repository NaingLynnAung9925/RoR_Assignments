<%= form_tag import_posts_path, multipart: true, class: "mb-5" do %>

<%= link_to "Export CSV", posts_path(format: :csv), class: 'btn btn-primary text-white' %>

<%= file_field_tag :file %>

<%= submit_tag "Import CSV", class: "btn btn-info" %>

<% end %>
<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Post Status</th>
      <th>Create User ID</th>
      <th>User Name</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.status %></td>
        <td><%= post.user_id %></td>
        <td><%= post.user.name %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to 'Show', post, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Post', new_post_path, class:"btn btn-primary text-white btn-sm" %>
  <%= link_to 'Logout', logout_path, class: "btn btn-danger text-white btn-sm" %>
<% end %>
  <%= link_to 'Back', root_url, class: "btn btn-dark text-white btn-sm" %>


